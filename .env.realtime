# Configuraci√≥n para Tiempo Real

# API Configuration
VITE_API_URL=http://localhost:3001

# WebSocket Configuration (opcional - solo si tienes WebSocket server)
# VITE_WS_URL=ws://localhost:3001
VITE_WS_PATH=/ws
VITE_ENABLE_WEBSOCKETS=false

# Polling Configuration (recomendado para desarrollo)
VITE_POLLING_INTERVAL=15000
VITE_POLLING_ENABLED=true

# Real-time Features
VITE_REALTIME_ENABLED=true
VITE_REALTIME_AUTO_START=true
VITE_REALTIME_NOTIFICATIONS=true

# Performance Settings
VITE_DEBOUNCE_TIME=1000
VITE_MAX_RECONNECT_ATTEMPTS=3
VITE_RECONNECT_INTERVAL=3000

# Chart Update Settings
VITE_CHART_UPDATE_THROTTLE=1500
VITE_CHART_ANIMATION_ENABLED=true

# Development Settings
VITE_DEBUG_REALTIME=true
VITE_LOG_LEVEL=info
